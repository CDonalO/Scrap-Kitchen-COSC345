<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/regionSelectFragment">
    <fragment
        android:id="@+id/regionSelectFragment"
        android:name="com.example.scrapkitchen.ui.recipe.RegionSelectFragment"
        android:label="RegionSelectFragment"
        tools:layout="@layout/fragment_region_select">
        <action
            android:id="@+id/action_regionSelectFragment_to_recipeListFragment"
            app:destination="@id/recipeListFragment" />
    </fragment>
    <fragment
        android:id="@+id/mealPlannerFragment"
        android:name="com.example.scrapkitchen.ui.mealPlanner.MealPlannerFragment"
        android:label="MealPlannerFragment" >
        <action
            android:id="@+id/action_mealPlannerFragment_to_recipeFragment"
            app:destination="@id/recipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/recipeFragment"
        android:name="com.example.scrapkitchen.ui.recipe.RecipeFragment"
        android:label="RecipeFragment" >
        <action
            android:id="@+id/action_recipeFragment_to_addListFromRecipeFragment"
            app:destination="@id/addListFromRecipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/addListFromRecipeFragment"
        android:name="com.example.scrapkitchen.ui.shoppingList.AddListFromRecipeFragment"
        android:label="AddListFromRecipeFragment" />
    <fragment
        android:id="@+id/recipeListFragment"
        android:name="com.example.scrapkitchen.ui.recipe.RecipeListFragment"
        android:label="RecipeListFragment" >
        <action
            android:id="@+id/action_recipeListFragment_to_recipeFragment"
            app:destination="@id/recipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/addShoppingItemFragment"
        android:name="com.example.scrapkitchen.ui.shoppingList.AddShoppingItemFragment"
        android:label="AddShoppingItemFragment" />
    <fragment
        android:id="@+id/shoppingListFragment"
        android:name="com.example.scrapkitchen.ui.shoppingList.ShoppingListFragment"
        android:label="ShoppingListFragment" >
        <action
            android:id="@+id/action_shoppingListFragment_to_addShoppingItemFragment"
            app:destination="@id/addShoppingItemFragment" />
    </fragment>
</navigation>